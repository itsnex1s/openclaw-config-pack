# OpenClaw Secure Deployment - Environment Variables
# Copy to .env and fill in your values

# ============================================================
# REQUIRED: OpenRouter API Key
# ============================================================
# Get free key: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-your-api-key-here

# ============================================================
# REQUIRED: Gateway Authentication
# ============================================================
# Min 32 characters
OPENCLAW_GATEWAY_PASSWORD=your-secure-password-minimum-32-characters

# Auto-generated if empty (openssl rand -hex 32)
OPENCLAW_GATEWAY_TOKEN=

# ============================================================
# TELEGRAM BOT (optional)
# ============================================================
# Get from @BotFather: /newbot
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz

# ============================================================
# CLOUDFLARE TUNNEL (optional)
# ============================================================
# CLOUDFLARE_TUNNEL_TOKEN=

# ============================================================
# TELEGRAM USERBOT (for channel digest)
# ============================================================
# Get from https://my.telegram.org/apps
TELEGRAM_API_ID=12345678
TELEGRAM_API_HASH=your_api_hash_here

# ============================================================
# GOOGLE AI (for channel digest summarization)
# ============================================================
# Get from https://ai.google.dev/
GOOGLE_API_KEY=your_google_api_key_here

# ============================================================
# DIGEST SETTINGS
# ============================================================
# Summary language: "en" or "ru"
DIGEST_LANGUAGE=en

# Group & topic IDs
TELEGRAM_GROUP_ID=-1001234567890
TELEGRAM_TOPIC_DAILY=12
TELEGRAM_TOPIC_TASKS=11
TELEGRAM_TOPIC_SECURITY=50
DIGEST_TOPIC_ID=121
# Topic ID for public channel digest (defaults to DIGEST_TOPIC_ID)
DIGEST_PUBLIC_TOPIC_ID=121
# Delay between HTTP requests for public scraping (seconds)
DIGEST_REQUEST_DELAY=2.0
BOOKMARKS_TOPIC_ID=125

# ============================================================
# WEATHER (wttr.in, no API key needed)
# ============================================================
WEATHER_CITY=London

# ============================================================
# CRYPTO & NFT PRICES (CoinGecko, no API key needed)
# ============================================================
# Comma-separated CoinGecko IDs
# Find IDs: https://www.coingecko.com/en/coins/{name}
CRYPTO_COINS=bitcoin,ethereum
# Find IDs: https://www.coingecko.com/en/nft/{name}
CRYPTO_NFTS=
